<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CezarActivity"
    android:padding="20dp"
    android:background="@color/black">

    <Button
        android:id="@+id/wroc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wróć"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>

    <TextView
        android:id="@+id/szyfr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Szyfr Cezara"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_below="@id/wroc"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"
        />

    <EditText
        android:id="@+id/wprowadz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/szyfr"
        android:layout_marginTop="30dp"
        android:background="@color/light_black"
        android:textColor="@color/light_green"
        />

    <TextView
        android:id="@+id/klucztxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Przesunięcie: "
        android:textSize="23sp"
        android:layout_below="@id/wprowadz"
        android:textColor="@color/light_green"/>

    <SeekBar
        android:id="@+id/klucz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/klucztxt"
        android:min="0"
        android:max="26"
        android:background="@color/light_black"
        />

    <TextView
        android:id="@+id/wyswietl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/klucz"
        android:textSize="26sp"
        android:background="@color/light_black"
        android:textColor="@color/light_green"/>

    <Button
        android:id="@+id/szyfruj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="szyfruj"
        android:layout_marginTop="20dp"
        android:layout_below="@id/wyswietl"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>

    <Button
        android:id="@+id/deszyfruj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deszyfruj"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/szyfruj"
        android:layout_below="@id/wyswietl"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>

</RelativeLayout>