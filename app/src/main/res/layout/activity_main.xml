<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/tekst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szyfry: "
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light_green"
        />

    <Button
        android:id="@+id/podstawieniowe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tekst1"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/pod"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>

    <Button
        android:id="@+id/mors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/mors"
        android:layout_below="@id/podstawieniowe"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>


    <Button
        android:id="@+id/cezar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/cezar"
        android:layout_below="@id/mors"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>

    <Button
        android:id="@+id/plotkowy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/plotkowy"
        android:layout_below="@id/cezar"
        android:textColor="@color/light_green"
        android:backgroundTint="@color/light_black"/>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>